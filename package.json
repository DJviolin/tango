{
  "name": "tango",
  "version": "1.0.0",
  "description": "A React-powered WordPress theme prototype.",
  "main": "index.js",
  "scripts": {
    "watch-sass": "sass --watch sass/style.scss:style.css",
    "watch-js": "watchify  -t reactify js/master.jsx -o js/public.js -dv",
    "watch": "npm run watch-sass & npm run watch-js",
    "build-js": "browserify -t reactify js/master.jsx | uglifyjs -mc > js/public.js",
    "build-sass": "sass --sourcemap=none sass/style.scss:style.css",
    "build": "npm run build-sass & npm run build-js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kwight/tango.git"
  },
  "author": "kwight",
  "license": "GPL v2",
  "bugs": {
    "url": "https://github.com/kwight/tango/issues"
  },
  "homepage": "https://github.com/kwight/tango",
  "devDependencies": {
    "browserify": "^9.0.7",
    "node-sass": "^2.1.1",
    "reactify": "^1.1.0",
    "uglify-js": "^2.4.19",
    "watchify": "^3.1.0"
  },
  "dependencies": {
    "react": "^0.13.1"
  }
}
